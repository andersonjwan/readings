<?xml version="1.0"?>
<robot name="robot">
    <material name="green">
        <color rgba="0 0.6 0 1"/>
    </material>
    <material name="grey">
        <color rgba="0.7 0.7 0.7 1"/>
    </material>

    <link name="base">
        <visual>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <material name="green"/>

            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
        </visual>
    </link>
    <link name="shoulder">
      <visual>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <material name="grey"/>

        <geometry>
          <cylinder radius="0.1" length="0.3"/>
        </geometry>
      </visual>
    </link>

    <joint name="base-shoulder" type="revolute">
      <parent link="base"/>
      <child link="shoulder"/>

      <origin xyz="0 0 0.2" rpy="0 0 0"/>

      <axis xyz="0 0 1"/>
      <limit lower="-3.14" upper="3.14" velocity="100" effort="100"/>
    </joint>
</robot>
