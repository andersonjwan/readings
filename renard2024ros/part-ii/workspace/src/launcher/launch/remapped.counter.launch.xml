<launch>
  <node pkg="pypkg" exec="c" name="creator" namespace="counter/v1">
    <remap from="/counter/v1/number" to="/number"/>

    <param name="number" value="100"/>
    <param name="period" value="2.5"/>
  </node>

  <node pkg="pypkg" exec="c" name="creator" namespace="counter/v2">
    <remap from="/counter/v2/number" to="/number"/>

    <param from="$(find-pkg-share launcher)/config/params.yaml"/>
  </node>

  <node pkg="pypkg" exec="d" name="tracker" namespace="counter">
    <remap from="/counter/number" to="/number"/>
  </node>
</launch>
